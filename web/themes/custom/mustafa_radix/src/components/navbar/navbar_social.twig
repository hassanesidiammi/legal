{#
/**
 * @file
 * Template for Social bar component.
 *
 * Available config:
 * - container: fixed | fluid.
 * - placement: default | fixed-top | fixed-bottom | sticky-top
 * - color: light | dark
 * - utility_classes: An array of utility classes.
 *
 * Available blocks:
 * - branding
 * - left
 * - right
 */
#}
{{ attach_library('mustafa_radix/navbar') }}

{% set container = container == 'fixed' ? 'container' : false %}
{% set placement = placement ?? '' %}
{% set color = color ?? 'light' %}

<nav class="navbar navbar-expand-lg justify-content-center navbar-{{ color }} {{ placement }} {{ utility_classes|join(' ') }}" style="height: {{ height }}">
  <div class="justify-content-center">
    {% if phone %}<span class="mx-1"><i class="fa fab fa-phone text-warning"></i> {{ phone }}</span>{% endif %}
    {% if themail %}<span class="mx-1"><i class="fas fa-at text-warning"></i> {{ themail }}</span>{% endif %}
    {% if show_social_icon %}
        <span class="mx-4 text-warning">
          {% if facebook_url %}
            <a href="{{ facebook_url }}"  class="facebook" target="_blank" ><i class="fab fa-facebook-f text-warning mx-1"></i></a>
          {% endif %}
          {% if twitter_url %}
            <a href="{{ twitter_url }}" class="twitter" target="_blank" ><i class="fab fa-twitter text-warning mx-1"></i></a>
          {% endif %}
          {% if linkedin_url %}
            <a href="{{ linkedin_url }}" class="linkedin" target="_blank"><i class="fab fa-linkedin-in text-warning mx-1"></i></a>
          {% endif %}
          {% if instagram_url %}
            <a href="{{ instagram_url }}" class="instagram" target="_blank" ><i class="fab fa-instagram text-warning mx-1"></i></a>
          {% endif %}
          {% if rss_url %}
            <a href="{{ rss_url }}" class="rss" target="_blank" ><i class="fa fa-rss text-warning mx-1"></i></a>
          {% endif %}
        </div>
      {% endif %}
  </div>
</nav>
